# Improved .editorconfig based on "best practices"
root = true

# === Global Settings (all files) ===
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# === Main .NET Code Style Rules (important) ===

# === C# Formatting Rules (readability) ===
[*.cs]
# ALWAYS use braces for if/else/while, etc. (prevents common bugs)
csharp_prefer_braces = true:warning

# Place 'using' directives inside the 'namespace' (cleaner file)
csharp_using_directive_placement = inside_namespace:warning

# Enforce a specific modifier order (e.g., public static readonly)
csharp_preferred_modifier_order = public,private,protected,internal,static,readonly,extern,new,virtual,abstract,sealed,override:warning

# === Modern C# Language Practices (highly recommended) ===

# Prefer file-scoped namespaces (C# 10+)
csharp_style_namespace_declarations = file_scoped:warning

# Enforce 'readonly' on private fields that are not reassigned after the constructor
dotnet_style_readonly_field = true:warning

# Prefer expression-bodied members for simple methods and properties
csharp_style_expression_bodied_methods = when_on_single_line:warning
csharp_style_expression_bodied_properties = when_on_single_line:warning
csharp_style_expression_bodied_constructors = false:warning # Constructors are better left as-is

# Prefer modern null-checking (is null / is not null)
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:warning

# Prefer object and collection initializers
dotnet_style_object_initializer = true:warning
dotnet_style_collection_initializer = true:warning

# === Naming Rules (tightened from 'suggestion' to 'warning') ===
dotnet_naming_rule.interface_should_be_prefixed_with_i.style = pascal_case_with_i_prefix
dotnet_naming_rule.interface_should_be_prefixed_with_i.symbols = interface
dotnet_naming_rule.interface_should_be_prefixed_with_i.severity = warning

dotnet_naming_symbols.interface.applicable_kinds = interface
dotnet_naming_symbols.interface.applicable_accessibilities = public, internal, private, protected, protected_internal, private_protected

dotnet_naming_style.pascal_case_with_i_prefix.capitalization = pascal_case
dotnet_naming_style.pascal_case_with_i_prefix.required_prefix = I
dotnet_naming_style.pascal_case_with_i_prefix.required_suffix =
dotnet_naming_style.pascal_case_with_i_prefix.word_separator =

# === Remainder of default formatting settings (less critical) ===
csharp_indent_braces = false
csharp_indent_case_contents = true
csharp_indent_labels = one_less_than_current
csharp_indent_switch_labels = true
csharp_new_line_before_catch = true
csharp_new_line_before_else = true
csharp_new_line_before_finally = true
csharp_new_line_before_members_in_anonymous_types = true
